<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new Listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title:</label>
                    <input type="text" id="title" name="listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">looks good!</div>
                    <div class="invalid-feedback">Please enter title.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter description.</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label for="image" class="form-lable">Upload Image:</label>
                        <input id="image" type="file" name="listing[image]"  class="form-control" required>
                        <div class="valid-feedback">looks good!</div>
                    </div>

                    <div class="mb-3 col-md-4">
                        <label for="category" class="form-lable">Category</label>
                        <select class="form-select" name="listing[category]" aria-label="Default select example">
                            <option value="rooms">Rooms</option>
                            <option value="iconic cities">Iconic cities</option>
                            <option value="mountains">Mountains</option>
                            <option value="amazing pools">Amazing pools</option>
                            <option value="camping">Camping</option>
                            <option value="farms">Farms</option>
                            <option value="artic">Artic</option>
                            <option value="domes">Domes</option>
                            <option value="boats">Boats</option>
                        </select>
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price:</label>
                        <input id="price" type="number" name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">Please enter valid price.</div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country:</label>
                        <input id="country" type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
                        <div class="invalid-feedback">Please enter country.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-lable">Location:</label>
                    <input id="location" type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
                    <div class="invalid-feedback">Please enter valid location.</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>